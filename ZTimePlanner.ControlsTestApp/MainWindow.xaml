<Window x:Class="ZTimePlanner.ControlsTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZTimePlanner.ControlsTestApp"
        xmlns:planner="clr-namespace:ZTimePlanner.Controls.Controls.Planner;assembly=ZTimePlanner.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <RadioButton Tag="Week" GroupName="plannerTypeGroup" Checked="PlannerTypeChecked" IsChecked="True">Week</RadioButton>
            <RadioButton Tag="WorkWeek" GroupName="plannerTypeGroup" Checked="PlannerTypeChecked">Work week</RadioButton>
        </StackPanel>
        <planner:Planner x:Name="planner" PlannerType="Week" />
    </StackPanel>

</Window>
