<UserControl x:Class="ZTimePlanner.PoC.PlannerEvent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZTimePlanner.PoC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid VerticalAlignment="Stretch"
          ToolTip="{Binding Description}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="eventHeader" Grid.Row="0" Grid.Column="0" Text="{Binding Header}" VerticalAlignment="Top" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis"/>
        <TextBlock x:Name="eventFooter" Grid.Row="1" Grid.Column="0" Text="{Binding Footer}" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" TextTrimming="CharacterEllipsis"/>

    </Grid>
</UserControl>
